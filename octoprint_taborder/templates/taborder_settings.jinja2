<form id="settings_plugin_taborder_form" class="form-horizontal">
	<div class="row-fluid" style="text-align: center;"><h4>OctoPrint-TabOrder</h4></div>
	<div class="row-fluid">
		<div class="row-fluid" style="margin-bottom: 5px;">
			<div class="span3"><h5>{{ _('Icon') }} <a class="fa fa-info-circle" href="https://fontawesome.com/v4.7.0/icons/" target="_blank" title="Uses fontawesome class names. Click for list of options."></a></h5></div>
			<div class="span1"><h5>{{ _('Color') }}</h5></div>
			<div class="span2"><h5>{{ _('Tooltip') }}</h5></div>
			<div class="span1"><h5>{{ _('Show') }}</h5></div>
			<div class="span3"><h5>{{ _('Tab Identifier') }}</h5></div>
			<div class="span1 btn-group" style="text-align: center;">
				<button class="btn btn-mini icon-arrow-up hidden"></button>
				<button class="btn btn-mini icon-arrow-down hidden"></button>			
			</div>
			<div class="span1 btn-group" style="text-align: center;"><button class="btn btn-mini icon-plus" data-bind="click: addTab"></button></div>
		</div>
	</div>
	<div class="row-fluid" data-bind="foreach: settings.settings.plugins.taborder.tabs">
		<div class="row-fluid" style="margin-bottom: 5px;">
			<div class="span3"><input type="text" class="input-block-level" data-bind="value: icon" /></div>
			<div class="span1"><input type="color" class="input-block-level" data-bind="value: icon_color" /></div>
			<div class="span2"><input type="text" class="input-block-level" data-bind="value: icon_tooltip" /></div>
			<div class="span1"><input type="checkbox" data-bind="checked: showtext" title="Show default tab label?"/></div>
			<div class="span3 input-append"><input type="text" class="input-block-level" data-bind="value: name" /></div>
			<div class="span1 btn-group" style="text-align: center;">
				<button class="btn btn-mini btn-primary icon-arrow-up" data-bind="click: $parent.moveUp.bind($parent, $index), disable: $index() == 0"></button>
				<button class="btn btn-mini btn-primary icon-arrow-down" data-bind="click: $parent.moveDown.bind($parent, $index), disable: ($index() === ($parent.tabs().length - 1))"></button>
			</div>
			<div class="span1 btn-group" style="text-align: center;"><button class="btn btn-mini btn-danger icon-trash" data-bind="click: $root.removeTab"></button></div>
		</div>
	</div>
</form>

   
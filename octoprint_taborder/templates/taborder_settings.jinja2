<form id="settings_plugin_taborder_form" class="form-horizontal">
	<div class="row-fluid"><h4>Tab Order Settings</h4></div>
	<div class="row-fluid"><h5><u>{{ _('Assigned Tabs') }}</u></h5></div>
	<div class="row-fluid" style="min-height: 50px;" data-bind="sortable: { data: settings.settings.plugins.taborder.tabs, options: { cancel: '.unsortable', handle: '.move_tab', axis:'y'} }">
		<div class="row-fluid" style="margin-bottom: 5px;">
			<div class="span1 btn-group" style="text-align: center;padding-top:3px;"><button class="btn btn-mini icon-move move_tab"></button></div>
			<div class="span3" data-bind="text: name"></div>
			<div class="span2 btn-group" style="text-align: center;padding-top:3px;"><button class="btn btn-mini icon-edit" data-bind="click: $root.editTab"></button><button class="btn btn-mini btn-danger icon-trash" data-bind="click: $root.removeTab"></button></div>
		</div>
	</div>
	<div class="row-fluid"><h5><u>{{ _('Hidden Tabs') }}</u></h5></div>
	<div class="row-fluid" style="min-height: 50px;" data-bind="sortable: { data: settings.settings.plugins.taborder.hidden_tabs, options: { cancel: '.unsortable', handle: '.move_tab', axis:'y'} }">
		<div class="row-fluid" style="margin-bottom: 5px;">
			<div class="span1 btn-group" style="text-align: center;padding-top:3px;"><button class="btn btn-mini icon-move move_tab"></button></div>
			<div class="span3" data-bind="text: name"></div>
			<div class="span2 btn-group" style="text-align: center;padding-top:3px;"><button class="btn btn-mini icon-edit" data-bind="click: $root.editTab"></button><button class="btn btn-mini btn-danger icon-trash" data-bind="click: $root.removeHiddenTab"></button></div>
		</div>
	</div>
	<div class="row-fluid"><h5><u>{{ _('Unassigned Tabs') }}</u></h5></div>
	<div class="row-fluid" data-bind="foreach: unassignedTabs">
		<div class="row-fluid">
			<div class="span1 btn-group"><button class="btn btn-mini btn-primary icon-plus" title="Add to Assigned Tabs" data-bind="click: $root.addMissingTab"></button><button class="btn btn-mini icon-plus" title="Add to Hidden Tabs" data-bind="click: $root.addHiddenMissingTab"></button></div>
			<div class="span11" data-bind="text: $data"></div>
		</div>
	</div>
</form>

<div id="TabOrderEditor" data-bind="with: selectedTab" class="modal hide fade">
	<div class="modal-header">
		<a href="#" class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
		<h3>Tab Editor: <span data-bind="text: name"/></h3>
	</div>
	<div class="modal-body">
			<div class="controls"><label class="control-label">{{ _('Icon') }}</label><div class="input-prepend"><span class="add-on" style="width: 25px;"><i class="" data-bind="css: icon, style: { color: icon_color() ? icon_color() : 'black' }"></i></span><input type="text" title="Enter search terms here to find icons in the icon picker." data-bind="iconpicker: icon, iconpickerOptions: {hideOnSelect: true, collision: true, inputSearch: true}" class="iconpicker input iconpicker-input"/></div></div>
			<div class="controls"><label class="control-label">{{ _('Color') }}</label><div class="input-prepend"><input type="color" class="add-on" style="width: 25px;" data-bind="value: icon_color" /><input type="text" class="input" data-bind="value: icon_color" title="Leave blank to inherit color setting" placeholder="Leave blank to inherit color" /></div></div>
			<div class="controls"><label class="control-label">{{ _('Tooltip') }}</label><input type="text" class="input-block-level" data-bind="value: icon_tooltip" /></div>
			<div class="controls"><label class="control-label"><input type="checkbox" style="margin-top: -1px;" data-bind="checked: showtext" title="Show default tab label?"/> {{ _('Show Tab Name') }}</label></div>
			<div class="controls"><label class="control-label"><input type="checkbox" style="margin-top: -1px;" data-bind="checked: usetitle" title="Use title as tab label?"/> {{ _('Use Tooltip as Tab Name') }}</label></div>
	</div>
	<div class="modal-footer">
		<small>Make sure to click save in the main settings after making changes here.</small> <button type="button" class="btn" data-dismiss="modal">Close</button>
	</div>
</div>
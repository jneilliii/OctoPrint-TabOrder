<form id="settings_plugin_sidebarorder_form" class="form-horizontal">
	<div class="row-fluid" style="text-align: center;"><h4>OctoPrint-SidebarOrder</h4></div>
	<div class="row-fluid">
		<div class="row-fluid" style="margin-bottom: 5px;">
			<div class="span10"><h5>{{ _('Sidebar Identifier') }}</h5></div>
			<div class="span1 btn-group" style="text-align: center;">
				<button class="btn btn-mini icon-arrow-up hidden"></button>
				<button class="btn btn-mini icon-arrow-down hidden"></button>			
			</div>
			<div class="span1 btn-group" style="text-align: center;"><button class="btn btn-mini icon-plus" data-bind="click: addSidebar"></button></div>
		</div>
	</div>
	<div class="row-fluid" data-bind="foreach: settings.settings.plugins.sidebarorder.sidebars">
		<div class="row-fluid" style="margin-bottom: 5px;">
			<div class="span10"><input type="text" class="input-block-level" data-bind="value: name" /></div>
			<div class="span1 btn-group" style="text-align: center;">
				<button class="btn btn-mini btn-primary icon-arrow-up" data-bind="click: $parent.moveUp.bind($parent, $index), disable: $index() == 0"></button>
				<button class="btn btn-mini btn-primary icon-arrow-down" data-bind="click: $parent.moveDown.bind($parent, $index), disable: ($index() === ($parent.sidebars().length - 1))"></button>
			</div>
			<div class="span1 btn-group" style="text-align: center;"><button class="btn btn-mini btn-danger icon-trash" data-bind="click: $root.removeSidebar"></button></div>
		</div>
	</div>
</form>

   